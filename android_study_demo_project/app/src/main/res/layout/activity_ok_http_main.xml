<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OkHttpMainActivity"
    android:orientation="vertical">

    <Button
        android:id="@+id/get_sync_bt"
        android:text="Get的同步请求"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:onClick="getSync"/>
    <Button
        android:id="@+id/get_async_bt"
        android:text="Get的异步请求"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:onClick="getAsync"/>
    <Button
        android:id="@+id/post_sync_bt"
        android:text="Post的同步请求"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:onClick="postSync"/>
    <Button
        android:id="@+id/post_async_bt"
        android:text="Post的异步请求"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:onClick="postAsync"/>



</LinearLayout>